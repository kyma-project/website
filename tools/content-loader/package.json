{
  "name": "@kyma-project/website-content-loader",
  "version": "0.1.0",
  "description": "Content loader for kyma-project.io",
  "main": "bin/main.ts",
  "scripts": {
    "start": "ts-node bin/main.ts",
    "lint-check": "tslint -c tslint.json '**/*.{ts,tsx}' --format verbose && prettier --check '**/*.{ts,tsx,js,jsx,json,html,css,yaml}'",
    "lint-fix": "tslint -c tslint.json '**/*.{ts,tsx}' --format verbose --fix && prettier --write '**/*.{ts,tsx,js,jsx,json,html,css,yaml}'"
  },
  "author": "The Kyma project authors",
  "license": "Apache-2.0",
  "dependencies": {},
  "devDependencies": {
    "@octokit/rest": "^15.13.1",
    "@octokit/graphql": "^2.1.1",
    "axios": "^0.18.0",
    "front-matter": "^3.0.2",
    "@types/fs-extra": "^5.0.5",
    "@types/verror": "^1.10.3",
    "await-to-js": "^2.1.1",
    "compare-versions": "^3.4.0",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.3",
    "husky": "^1.1.2",
    "js-yaml": "^3.12.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.15.2",
    "safe-buffer": "5.1.1",
    "ts-node": "^8.0.3",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.4.1",
    "verror": "^1.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,json,css}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "package.json",
      "package-lock.json"
    ]
  }
}
