{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@common/*": ["./src/common/*"],
      "@components/*": ["./src/components/*"],
      "@config": ["./config.json"],
      "@static": ["./static/*"],
      "@styled": ["./src/common/styled"],
      "@styled/*": ["./src/common/styled/*"]
    }
  },
  "exclude": ["**/node_modules/**/*"]
}
